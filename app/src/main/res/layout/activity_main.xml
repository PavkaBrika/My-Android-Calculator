<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4">

        <TextView
            android:id="@+id/str"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_gravity="bottom"
            android:fontFamily="@font/advent_pro_light"
            android:textSize="70sp" />

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:fontFamily="@font/advent_pro_light"
            android:textSize="35sp" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <TableRow
            android:layout_weight="1">

            <Button
                android:id="@+id/clear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/advent_pro_light"
                android:text="C"
                android:textSize="50sp"></Button>

            <Button
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/advent_pro_light"
                android:text="d"
                android:textSize="50sp"></Button>

            <Button
                android:id="@+id/percent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/advent_pro_light"
                android:text="%"
                android:textSize="50sp"></Button>

            <Button
                android:id="@+id/division"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/advent_pro_light"
                android:text="/"
                android:textSize="50sp"></Button>
        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/n7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/advent_pro_light"
                android:text="7"
                android:textSize="50sp"></Button>

            <Button
                android:id="@+id/n8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/advent_pro_light"
                android:text="8"
                android:textSize="50sp"></Button>

            <Button
                android:id="@+id/n9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/advent_pro_light"
                android:text="9"
                android:textSize="50sp"></Button>

            <Button
                android:id="@+id/multiplication"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/advent_pro_light"
                android:text="x"
                android:textSize="50sp"></Button>
        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/n4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/advent_pro_light"
                android:text="4"
                android:textSize="50sp"></Button>

            <Button
                android:id="@+id/n5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/advent_pro_light"
                android:text="5"
                android:textSize="50sp"></Button>

            <Button
                android:id="@+id/n6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/advent_pro_light"
                android:text="6"
                android:textSize="50sp"></Button>

            <Button
                android:id="@+id/substraction"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/advent_pro_light"
                android:text="-"
                android:textSize="50sp"></Button>
        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/n1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/advent_pro_light"
                android:text="1"
                android:textSize="50sp"></Button>

            <Button
                android:id="@+id/n2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/advent_pro_light"
                android:text="2"
                android:textSize="50sp"></Button>

            <Button
                android:id="@+id/n3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/advent_pro_light"
                android:text="3"
                android:textSize="50sp"></Button>

            <Button
                android:id="@+id/addition"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/advent_pro_light"
                android:text="+"
                android:textSize="50sp"></Button>
        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/plusminus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/advent_pro_light"
                android:text="+/-"
                android:textSize="50sp"></Button>

            <Button
                android:id="@+id/n0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/advent_pro_light"
                android:text="0"
                android:textSize="50sp"></Button>

            <Button
                android:id="@+id/dot"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/advent_pro_light"
                android:text=","
                android:textSize="50sp"></Button>

            <Button
                android:id="@+id/equals"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/advent_pro_light"
                android:text="="
                android:textSize="50sp"></Button>
        </TableRow>


    </TableLayout>

    <!--    <LinearLayout-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent"-->
    <!--        android:layout_weight="1"-->
    <!--        ></LinearLayout>-->
</LinearLayout>







